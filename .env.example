# 服务器配置
FIRERED_SERVER_HOST=0.0.0.0
FIRERED_SERVER_PORT=8000
FIRERED_SERVER_WORKERS=1
FIRERED_SERVER_DEBUG=false

# 模型配置
FIRERED_MODELS_BASE_DIR=./pretrained_models
FIRERED_MODELS_PRELOAD_ON_START=true

# ASR 模型配置
FIRERED_ASR_ENABLED=true
FIRERED_ASR_TYPE=aed
FIRERED_ASR_MODEL_DIR=FireRedASR2-AED
FIRERED_ASR_USE_GPU=true
FIRERED_ASR_USE_HALF=false
FIRERED_ASR_BEAM_SIZE=3
FIRERED_ASR_RETURN_TIMESTAMP=false

# VAD 模型配置
FIRERED_VAD_ENABLED=true
FIRERED_VAD_MODEL_DIR=FireRedVAD/VAD
FIRERED_VAD_STREAM_MODEL_DIR=FireRedVAD/Stream-VAD
FIRERED_VAD_AED_MODEL_DIR=FireRedVAD/AED
FIRERED_VAD_USE_GPU=false
FIRERED_VAD_SPEECH_THRESHOLD=0.4

# LID 模型配置
FIRERED_LID_ENABLED=true
FIRERED_LID_MODEL_DIR=FireRedLID
FIRERED_LID_USE_GPU=true
FIRERED_LID_USE_HALF=false

# 标点恢复模型配置
FIRERED_PUNC_ENABLED=true
FIRERED_PUNC_MODEL_DIR=FireRedPunc
FIRERED_PUNC_USE_GPU=true

# 处理配置
FIRERED_PROCESSING_MAX_AUDIO_DURATION=60
FIRERED_PROCESSING_MAX_FILE_SIZE=52428800
FIRERED_PROCESSING_TEMP_DIR=/tmp/fireredasr2s
FIRERED_PROCESSING_CLEANUP_TEMP_FILES=true

# 日志配置
FIRERED_LOGGING_LEVEL=INFO
FIRERED_LOGGING_FILE=/var/log/fireredasr2s/app.log
FIRERED_LOGGING_MAX_FILE_SIZE=10485760
FIRERED_LOGGING_BACKUP_COUNT=5
